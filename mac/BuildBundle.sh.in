#!/bin/sh

IN_DIR=$1
BUNDLE_DIR=$2
TYPE=$3

[ -d ${BUNDLE_DIR} ] && rm -r ${BUNDLE_DIR}
cp -r "${IN_DIR}" "${BUNDLE_DIR}" || exit 1
for f in `find "${BUNDLE_DIR}/Contents/MacOS/" -type f`; do
    MACDEPLOYQT_EXECUTABLE="${MACDEPLOYQT_EXECUTABLE} -executable=${f}"
done

@MACDEPLOYQT@ "${BUNDLE_DIR}" ${MACDEPLOYQT_EXECUTABLE} ${TYPE}


